{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "7.0.0"
    },
    {
      "type": "panel",
      "id": "graph",
      "name": "Graph",
      "version": ""
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "1.0.0"
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 },
      "id": 1,
      "title": "Service Replicas",
      "type": "singlestat",
      "valueName": "current",
      "targets": [
        {
          "expr": "sum(docker_swarm_service_replicas)",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 },
      "id": 2,
      "title": "Node CPU Usage",
      "type": "gauge",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode='idle'}[1m])) * 100)",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 },
      "id": 3,
      "title": "Node Memory Usage",
      "type": "gauge",
      "targets": [
        {
          "expr": "100 - ((node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes) * 100)",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 },
      "id": 4,
      "title": "Container Restarts",
      "type": "singlestat",
      "valueName": "current",
      "targets": [
        {
          "expr": "sum(increase(container_restarts_total[5m]))",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "id": 5,
      "title": "Network Receive",
      "type": "graph",
      "targets": [
        {
          "expr": "sum(rate(container_network_receive_bytes_total[1m])) by (name)",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "id": 6,
      "title": "Network Transmit",
      "type": "graph",
      "targets": [
        {
          "expr": "sum(rate(container_network_transmit_bytes_total[1m])) by (name)",
          "refId": "A"
        }
      ]
    }
  ],
  "schemaVersion": 27,
  "style": "dark",
